/* pages/components/float/float.wxss */
.left-l {
  float: left;
}
.right-r {
  float: left;
}
.clear {
  clear: both;
}
.float.active {
  display: none;
}
.float {
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  
}
.float .bg{
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.4);
}
.float .box{
  width: 80%;
  position: absolute;
  top: 0;
  text-align: center;
  margin: 200rpx 10%;
  box-sizing: border-box;
}
.float .box-item{
  background-color: pink;
  border-radius: 30rpx;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}
.float .box .item1 {
  text-align: center;
  font-size: 80rpx;
  color: #fff;

}
.float .box .item {
  background-color: #fff;
  border-radius: 10rpx;
}
.float .box .item:nth-child(2) {
  margin-bottom: 20rpx;
}
.float .box .item .left {
  width: 29%;
  text-align: center;
  padding-top: 35rpx;
}
.float .box .item .left text{
  font-size: 24rpx;
  color: #e23934;
}
.float .box .item .left text:nth-child(2){
  font-size: 50rpx;
}
.float .box .item .right {
  padding: 15rpx 0;
  width: 70%;
  font-size: 24rpx;
  text-align: left;
  border-left: 2rpx dashed #fd8b69;
  box-sizing: border-box;
  padding-left: 5%;
}
.float .box .item .right text {
  display: block;
}
.float .box .item .right text:nth-child(1){
  color: #b84b60;
  font-size: 28rpx;
}
.float .box .item .right text:nth-child(2){
  color: #353535;
  font-size: 24rpx;
}
.float .box .item .right text:nth-child(3){
  color: #939393;
  font-size: 20rpx;
}
.float .box .iconfont {
  position: absolute;
  right: -13rpx;
  top: -32rpx;
  font-size: 45rpx;
  color: #fff;
}
.float .button {
  padding-top: 30rpx;
}
.float .button button{
  width: 70%;
  background-color: #f9ea2f;
  color: #ac0000;
  padding: 10rpx;
  border-radius: 40rpx;
}